{
  "info": {
    "name": "BookStore API Collection",
    "description": "Postman collection to test ToolsQA BookStore API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "_postman_id": "bookstore-api-20250610023351"
  },
  "item": [
    {
      "name": "User Authentication",
      "item": [
        {
          "name": "Create User (Valid)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/Account/v1/User",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "Account",
                "v1",
                "User"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"testuser123\",\n  \"password\": \"Password123!\"\n}"
            }
          },
          "response": [],
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 201\", () => pm.response.to.have.status(201));",
                  "pm.test(\"Response contains userID\", () => pm.expect(pm.response.json().userID).to.exist);"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "Generate Token (Valid)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/Account/v1/GenerateToken",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "Account",
                "v1",
                "GenerateToken"
              ]
            },
            "body": {
              "mode": "raw",
              "raw": "{\n  \"userName\": \"testuser123\",\n  \"password\": \"Password123!\"\n}"
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
                  "pm.test(\"Response has token\", () => pm.expect(pm.response.json().token).to.be.a('string'));"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    },
    {
      "name": "Book Operations",
      "item": [
        {
          "name": "Get All Books",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Accept",
                "value": "application/json"
              }
            ],
            "url": {
              "raw": "{{base_url}}/BookStore/v1/Books",
              "host": [
                "{{base_url}}"
              ],
              "path": [
                "BookStore",
                "v1",
                "Books"
              ]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test(\"Status code is 200\", () => pm.response.to.have.status(200));",
                  "const books = pm.response.json().books || [];",
                  "pm.test(\"Books list is not empty\", () => pm.expect(books.length).to.be.above(0));"
                ],
                "type": "text/javascript"
              }
            }
          ]
        }
      ]
    }
  ],
  "variable": [
    {
      "key": "base_url",
      "value": "https://bookstore.toolsqa.com"
    }
  ]
}